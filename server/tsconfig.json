{
	"compilerOptions": {
		"module": "CommonJS",
		"strict": true,
		"baseUrl": "./",
		"outDir": "build",
		"removeComments": true,
		"experimentalDecorators": true,
		"target": "ES2020",
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"types": ["node"],
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./src/public/"]
}
